<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:gravity="center|top"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnOptions"
            android:layout_width="0dp"
            android:layout_height="96dp"
            android:backgroundTint="@color/btn_color_blue"
            android:text="@string/options"
            android:textAllCaps="false"
            android:textSize="34sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textViewTimeLeftText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="@string/timeLeft"
                android:textColor="@color/black"
                android:textSize="34sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textViewTimeLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="00:00"
                android:textColor="@color/black"
                android:textSize="34sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textViewRepeatDoneText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="64dp"
                android:layout_marginTop="16dp"
                android:text="@string/repeatDone"
                android:textColor="@color/black"
                android:textSize="34sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textViewRepeatDone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="N"
                android:textColor="@color/black"
                android:textSize="34sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <AbsoluteLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageViewCameraPicture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_x="0dp"
            android:layout_y="0dp"
            tools:srcCompat="@tools:sample/avatars" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnStartExerciseReal"
                android:layout_width="512dp"
                android:layout_height="128dp"
                android:backgroundTint="@color/btn_color_green"
                android:text="@string/start"
                android:textAllCaps="false"
                android:textSize="34sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRoundButton1"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:layout_x="100dp"
            android:layout_y="100dp"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="34sp"
            app:backgroundTint="@color/btn_color_green"
            app:cornerRadius="32dp"
            tools:layout_editor_absoluteX="300dp"
            tools:layout_editor_absoluteY="213dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRoundButton2"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:layout_x="200dp"
            android:layout_y="100dp"
            android:text="2"
            android:textColor="@color/black"
            android:textSize="34sp"
            app:backgroundTint="@color/btn_color_green"
            app:cornerRadius="32dp"
            tools:layout_editor_absoluteX="300dp"
            tools:layout_editor_absoluteY="213dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRoundButton3"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:layout_x="300dp"
            android:layout_y="100dp"
            android:text="3"
            android:textColor="@color/black"
            android:textSize="34sp"
            app:backgroundTint="@color/btn_color_green"
            app:cornerRadius="32dp"
            tools:layout_editor_absoluteX="300dp"
            tools:layout_editor_absoluteY="213dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRoundButton4"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:layout_x="400dp"
            android:layout_y="100dp"
            android:text="4"
            android:textColor="@color/black"
            android:textSize="34sp"
            app:backgroundTint="@color/btn_color_green"
            app:cornerRadius="32dp"
            tools:layout_editor_absoluteX="300dp"
            tools:layout_editor_absoluteY="213dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRoundButton5"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:layout_x="500dp"
            android:layout_y="100dp"
            android:text="5"
            android:textColor="@color/black"
            android:textSize="34sp"
            app:backgroundTint="@color/btn_color_green"
            app:cornerRadius="32dp"
            tools:layout_editor_absoluteX="300dp"
            tools:layout_editor_absoluteY="213dp" />

    </AbsoluteLayout>

</LinearLayout>